<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Fighters" %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl">Fighters</h1>
    <%= link_to "New fighter", new_fighter_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="mb-4" data-controller="fighters-search">
    <%= form_tag(
        search_fighters_path,
        method: :get,
        'data-fighters-search-target': 'searchForm'
      ) do %>
      <div>
        <%= text_field_tag :query,
          params[:query],
          placeholder: "Search fighter by name",
          class: "form-item",
          'data-action': 'fighters-search#search'
        %>
      </div>
    <% end %>
  </div>

  <%=
    render partial: "fighters/fighters_list",
    locals: { fighters: @fighters }
  %>
</div>
